#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void bubble_sort(int arr[], int n, long long *steps) {
    *steps = 0;
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                int temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
                (*steps)++;
            }
        }
    }
}

void insertion_sort(int arr[], int n, long long *steps) {
    *steps = 0;
    for (int i = 1; i < n; i++) {
        int key = arr[i];
        int j = i - 1;
        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j];
            j--;
            (*steps)++;
        }
        arr[j + 1] = key;
    }
}

void merge(int arr[], int left, int mid, int right, long long *steps) {
    int n1 = mid - left + 1;
    int n2 = right - mid;
    
    int *L = (int*)malloc(n1 * sizeof(int));
    int *R = (int*)malloc(n2 * sizeof(int));
    
    for (int i = 0; i < n1; i++)
        L[i] = arr[left + i];
    for (int i = 0; i < n2; i++)
        R[i] = arr[mid + 1 + i];
    
    int i = 0, j = 0, k = left;
    while (i < n1 && j < n2) {
        (*steps)++;
        if (L[i] <= R[j]) {
            arr[k] = L[i];
            i++;
        } else {
            arr[k] = R[j];
            j++;
        }
        k++;
    }
    
    while (i < n1) {
        arr[k] = L[i];
        i++;
        k++;
    }
    
    while (j < n2) {
        arr[k] = R[j];
        j++;
        k++;
    }
    
    free(L);
    free(R);
}

void merge_sort(int arr[], int left, int right, long long *steps) {
    if (left < right) {
        int mid = left + (right - left) / 2;
        merge_sort(arr, left, mid, steps);
        merge_sort(arr, mid + 1, right, steps);
        merge(arr, left, mid, right, steps);
    }
}

void generate_array(int arr[], int n) {
    for (int i = 0; i < n; i++) {
        arr[i] = rand() % 100000;
    }
}

void copy_array(int src[], int dst[], int n) {
    for (int i = 0; i < n; i++) {
        dst[i] = src[i];
    }
}

int is_sorted(int arr[], int n) {
    for (int i = 0; i < n - 1; i++) {
        if (arr[i] > arr[i + 1]) {
            return 0;
        }
    }
    return 1;
}

void run_test(char* name, void (*sort_func)(int[], int, long long*), 
              int arr[], int n, long long *steps, double *time) {
    clock_t start = clock();
    sort_func(arr, n, steps);
    clock_t end = clock();
    *time = (double)(end - start) / CLOCKS_PER_SEC;
}

int main() {
    srand(time(NULL));
    
    int sizes[] = {10, 1000, 10000, 100000};
    int num_sizes = sizeof(sizes) / sizeof(sizes[0]);
    
    double times[3][4] = {0};
    long long steps[3][4] = {0};
    
    printf("Тестирование алгоритмов сортировки:\n");
    printf("===================================\n\n");
    
    for (int s = 0; s < num_sizes; s++) {
        int n = sizes[s];
        
        printf("\nРазмер массива: %d\n", n);
        printf("--------------------\n");
        
        int *original = (int*)malloc(n * sizeof(int));
        int *arr = (int*)malloc(n * sizeof(int));
        
        generate_array(original, n);
        
        // Bubble Sort
        copy_array(original, arr, n);
        printf("Bubble Sort: ");
        run_test("Bubble", bubble_sort, arr, n, &steps[0][s], &times[0][s]);
        printf("Время: %.6f сек, Шаги: %lld, Корректно: %s\n", 
               times[0][s], steps[0][s], is_sorted(arr, n) ? "Да" : "Нет");
        
        // Insertion Sort
        copy_array(original, arr, n);
        printf("Insertion Sort: ");
        run_test("Insertion", insertion_sort, arr, n, &steps[1][s], &times[1][s]);
        printf("Время: %.6f сек, Шаги: %lld, Корректно: %s\n", 
               times[1][s], steps[1][s], is_sorted(arr, n) ? "Да" : "Нет");
// Merge Sort
        copy_array(original, arr, n);
        printf("Merge Sort: ");
        long long merge_steps = 0;
        clock_t start = clock();
        merge_sort(arr, 0, n - 1, &merge_steps);
        clock_t end = clock();
        times[2][s] = (double)(end - start) / CLOCKS_PER_SEC;
        steps[2][s] = merge_steps;
        printf("Время: %.6f сек, Шаги: %lld, Корректно: %s\n", 
               times[2][s], steps[2][s], is_sorted(arr, n) ? "Да" : "Нет");
        
        free(original);
        free(arr);
    }
    
    printf("\n\nСводная таблица результатов:\n");
    printf("=================================================================\n");
    printf("| Размер  | Алгоритм        | Время (сек)   | Перестановки     |\n");
    printf("=================================================================\n");
    
    char* names[] = {"Bubble Sort", "Insertion Sort", "Merge Sort"};
    
    for (int s = 0; s < num_sizes; s++) {
        for (int a = 0; a < 3; a++) {
            printf("| %7d | %-15s | %13.6f | %16lld |\n", 
                   sizes[s], names[a], times[a][s], steps[a][s]);
        }
        printf("|---------|-----------------|---------------|------------------|\n");
    }
    
    return 0;
}
